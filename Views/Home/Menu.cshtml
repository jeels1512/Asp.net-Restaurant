    ViewBag.Title = "Menu";
}

<h2 class="text-primary mb-4">Our Signature Dishes</h2>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <img src="~/images/Burger.webp" class="card-img-top" alt="Grilled Salmon">
            <div class="card-body text-center">
                <h5 class="card-title">Grilled Salmon</h5>
                <p class="card-text">Fresh salmon grilled with lemon butter sauce.</p>
                <p class="fw-bold">$19.99</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <img src="~/images/Meat.webp" class="card-img-top" alt="Pasta Alfredo">
            <div class="card-body text-center">
                <h5 class="card-title">Pasta Alfredo</h5>
                <p class="card-text">Classic creamy Alfredo pasta with parmesan.</p>
                <p class="fw-bold">$14.99</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <img src="~/images/Pasta.webp" class="card-img-top" alt="Caesar Salad">
            <div class="card-body text-center">
                <h5 class="card-title">Caesar Salad</h5>
                <p class="card-text">Crisp romaine, parmesan, and Caesar dressing.</p>
                <p class="fw-bold">$9.99</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <img src="~/images/Pizza.webp" class="card-img-top" alt="Margherita Pizza">
            <div class="card-body text-center">
                <h5 class="card-title">Margherita Pizza</h5>
                <p class="card-text">Tomato sauce, mozzarella, and fresh basil.</p>
                <p class="fw-bold">$12.99</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <img src="~/images/Prasty.webp" class="card-img-top" alt="Chicken Wings">
            <div class="card-body text-center">
                <h5 class="card-title">Spicy Chicken Wings</h5>
                <p class="card-text">Served with blue cheese dip.</p>
                <p class="fw-bold">$11.99</p>
            </div>
        </div>
    </div>
